<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <Title>Státní Svátky</Title>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <RepositoryType>git</RepositoryType>
    <RepositoryUrl>https://github.com/DockalRadim/StatniSvatky.git</RepositoryUrl>
    <Description>Knihovna pro kontrolu státních svátku v ČR,
včetně informaci o uzavřéní obchodů.</Description>
    <PackageProjectUrl>https://github.com/DockalRadim/StatniSvatky</PackageProjectUrl>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageTags>svatek;statni;statnisvatek;dnyvolna;zavreneobchody</PackageTags>
    <NeutralLanguage>cs</NeutralLanguage>
    <Authors>Geemon</Authors>
  </PropertyGroup>

  <ItemGroup>
    <None Update="README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
